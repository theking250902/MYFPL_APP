<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity"
    android:background="@drawable/bgggggg"
    android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/logofptedu"
        android:layout_marginLeft="-140dp"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginTop="-20dp"
        android:layout_gravity="center"
        android:background="@drawable/logofpt2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="myFpoly"
        android:textSize="60dp"
        android:layout_gravity="center"
        android:textColor="#FF9900"
        android:textStyle="bold"
        android:layout_marginTop="-30dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Chọn cơ sở đào tạo"
        android:paddingStart="20dp"
        android:drawablePadding="-20dp"
        android:drawableStart="@drawable/location1"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_input"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:textColor="#996699"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Đăng nhập với Google"
        android:paddingStart="20dp"
        android:drawableStart="@drawable/logogoogle"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_input"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:textColor="#996699"
        android:textStyle="bold"
        android:textSize="20dp"/>



</LinearLayout>